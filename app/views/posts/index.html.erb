<div class = "row">
    <% for post in @posts %>
    <!-- The number after 3 = the number of units the columns will take up, so 4/12 = 3 -->
      <div class = "col-lg-3">
        <h4>
          <%# find user who created post %>
          <% user = User.find_by({ "id" => post["user_id"] }) %>
          <%# handle any potential bad data where the post is missing a user %>
          <% if user %>
            <%= user["first_name"] %>
          <% else %>
            anonymous
          <% end %>
        </h4>
        <img src="<%= post["image"] %>" class="img-fluid">
        <p><%= post["body"] %></p>
      </div>
    <% end %> 
    </div>
  </div>
</div>
